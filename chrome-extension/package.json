{
  "name": "dom-agent-chrome",
  "version": "0.1.3",
  "description": "Chrome Extension for DOM inspection and AI-powered code generation",
  "main": "dist/background.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:custom": "node scripts/test-runner.js",
    "package": "npm run build && cd dist && zip -r ../dom-agent-chrome.zip .",
    "dev": "npm run watch"
  },
  "keywords": [
    "chrome-extension",
    "dom",
    "inspection",
    "ai",
    "code-generation",
    "automation",
    "web-scraping"
  ],
  "author": "zhijiewong",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhijiewong/dom-agent-chrome.git"
  },
  "bugs": {
    "url": "https://github.com/zhijiewong/dom-agent-chrome/issues"
  },
  "homepage": "https://heviber.org/",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "css-select": "^6.0.0",
    "css-tree": "^2.3.1",
    "dompurify": "^3.2.6",
    "eventemitter3": "^5.0.1",
    "handlebars": "^4.7.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sanitize-html": "^2.17.0",
    "unique-selector": "^0.5.0",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/dompurify": "^3.2.0",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.19.123",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@webpack-cli/generators": "^3.0.7",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.9.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts",
      "<rootDir>/src/**/*.test.tsx"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
