{
  "name": "viber",
  "displayName": "Viber",
  "description": "Interactive DOM inspection and AI-powered code generation extension for Cursor IDE and VS Code",
  "version": "0.1.0",
  "publisher": "viber-dev",
  "author": {
    "name": "Viber Team"
  },
  "license": "Apache-2.0",
  "homepage": "https://viber.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/viber-dev/viber.git"
  },
  "bugs": {
    "url": "https://github.com/viber-dev/viber/issues"
  },
  "engines": {
    "vscode": "^1.73.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "dom",
    "inspection",
    "ai",
    "cursor",
    "playwright",
    "automation",
    "viber",
    "web-scraping",
    "code-generation"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viber.openUrl",
        "title": "Open URL in Viber",
        "category": "Viber",
        "icon": "$(globe)"
      },
      {
        "command": "viber.detectDevServer",
        "title": "Detect Local Dev Server",
        "category": "Viber",
        "icon": "$(server-environment)"
      },
      {
        "command": "viber.generateCode",
        "title": "Generate Code from Selection",
        "category": "Viber",
        "icon": "$(wand)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "viber.openUrl"
        },
        {
          "command": "viber.detectDevServer"
        },
        {
          "command": "viber.generateCode",
          "when": "viber.hasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Viber",
      "properties": {
        "viber.defaultBrowser": {
          "type": "string",
          "default": "chromium",
          "enum": [
            "chromium",
            "firefox",
            "webkit"
          ],
          "description": "Default browser for DOM capture"
        },
        "viber.aiProvider": {
          "type": "string",
          "default": "cursor-native",
          "enum": [
            "cursor-native",
            "openai",
            "anthropic"
          ],
          "description": "AI provider for code generation"
        },
        "viber.autoDetectDevServer": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect running dev servers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "compile-dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "watch:prod": "webpack --mode production --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "package": "vsce package",
    "package:pre-release": "vsce package --pre-release",
    "publish": "vsce publish",
    "publish:pre-release": "vsce publish --pre-release",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "build": "npm run lint && npm run type-check && npm run compile",
    "dev": "npm run watch",
    "clean": "rm -rf out dist *.vsix",
    "pretest": "npm run compile && npm run lint",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@types/sanitize-html": "^2.16.0",
    "css-select": "^6.0.0",
    "css-tree": "^2.3.1",
    "dompurify": "^3.2.6",
    "eventemitter3": "^5.0.1",
    "handlebars": "^4.7.8",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "sanitize-html": "^2.17.0",
    "unique-selector": "^0.5.0",
    "winston": "^3.17.0",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.19.123",
    "@types/vscode": "^1.103.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.21.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "null-loader": "^4.0.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/extension.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^vscode$": "<rootDir>/test/__mocks__/vscode.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  }
}
